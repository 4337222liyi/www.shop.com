<decorators defaultdir="/decorators">

    <decorator name="onlyinclude" page="main_onlyinclude.jsp">
    	<pattern>/*</pattern>
    	<pattern>/jsp/weixin/viewcontent.jsp</pattern>
    	<pattern>/jsp/weixin/viewnews.jsp</pattern>
    	<pattern>/jsp/weixin/listcontentbychannelid.jsp</pattern>
    	<pattern>/jsp/weixin/listbychanneliddate.jsp</pattern>	
    </decorator>
    
    
	<decorator name="main_noleft" page="main_noleft.jsp">
		<pattern>/jsp/business/commons/*</pattern>
		<pattern>/userController/*</pattern>
	</decorator>
	
	<decorator name="main" page="main.jsp">
		<pattern>/jsp/weixin/*</pattern>
		<pattern>/wxContentController/*</pattern>
		<pattern>/userController/*</pattern>
		<pattern>/jsp/business/yw/WxAdvisory-show.jsp</pattern>
		<pattern>*.jsp</pattern>
	</decorator>

	
	<excludes>
		<pattern>/index.jsp*</pattern> 
		<pattern>/assets/*</pattern> 
		<pattern>/resources/*</pattern>
		<pattern>/servlet/*</pattern>  		
		<pattern>/jsp/framework/common/*</pattern>
		<pattern>*.xml</pattern> 
		<pattern>*.js</pattern>
		<pattern>*.css</pattern>
		<pattern>*.tld</pattern>
		<pattern>/logout</pattern>
		
        <pattern>/jsp/business/yw/WxAdvisory-index.jsp</pattern>
	</excludes>
</decorators>
