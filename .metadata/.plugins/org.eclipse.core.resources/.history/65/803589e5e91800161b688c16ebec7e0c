   <select id="findNewGood" resultMap="BaseResultMap" parameterType="com.qiuji.cn.model.TProduct">
      select 
         <include refid="Base_Column_List" />
      from t_product  where F_Status = 0  order by F_ProductTime desc  limit 0,3 
   </select>
   
   <select id="findNewHot" resultMap="BaseResultMap" parameterType="com.qiuji.cn.model.TProduct">
      select 
         <include refid="Base_Column_List" />
      from t_product  where F_Status = 0  order by F_Degree desc  limit 0,3 
   </select>
   
    <select id="findNewSpecial" resultMap="BaseResultMap" parameterType="com.qiuji.cn.model.TProduct">
      select 
         <include refid="Base_Column_List" />
      from t_product  where F_Status = 0 and F_IsSpecial=1  order by F_Degree desc  limit 0,3 
   </select>
   
