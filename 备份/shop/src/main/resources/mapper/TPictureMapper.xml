<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qiuji.cn.dao.TPictureMapper" >

  <resultMap id="BaseResultMap" type="com.qiuji.cn.model.TPicture" >
    <id column="F_id" property="fId" jdbcType="INTEGER" />
    <result column="F_ProductId" property="fProductId" jdbcType="VARCHAR" /> 
    <result column="F_BigPic" property="fBigPic" jdbcType="VARCHAR" /> 
    <result column="F_MidPic" property="fMidPic" jdbcType="VARCHAR" /> 
    <result column="F_Small" property="fSmall" jdbcType="VARCHAR" />  
  </resultMap>
  
  <sql id="Base_Column_List" > 
        F_id,F_ProductId,F_BigPic,F_MidPic,F_Small
  </sql>
  
   
   
   <select id="queryByProduct" resultMap="BaseResultMap" parameterType="com.qiuji.cn.model.TProduct">
      select 
         <include refid="Base_Column_List" />  from t_picture where F_ProductId=#{FProductId,jdbcType=VARCHAR}
   </select>
    
   
   <insert id="insert" parameterType="com.qiuji.cn.model.TCarousel"> 
    insert into t_carousel (F_Url,F_Address)
     values (#{FUrl,jdbcType=VARCHAR}, #{FAddress,jdbcType=VARCHAR})  
   </insert>
   
   <update id="update" parameterType="com.qiuji.cn.model.TCarousel">
      update t_carousel set F_Url = #{FUrl,jdbcType=VARCHAR}  where F_Address = #{FAddress,jdbcType=VARCHAR}
  </update>
</mapper>