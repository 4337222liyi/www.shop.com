<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
   
   <!--  <context:spring-configured/> -->

	<!-- <aop:aspectj-autoproxy/> -->
	
	<!-- 配置读取配置 -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="locations">
	        <value>classpath:jdbc.properties</value>
	    </property>
	</bean>
	
	<!-- dbcp -->
	   <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">  
	   <!-- mysql -->  
       <property name="driverClassName"><value>${mysql_driverClassName}</value></property>  
       <property name="url"><value>${mysql_url}</value></property>   
       <property name="username" value="${mysql_username}"></property>  
       <property name="password" value="${mysql_password}"></property>  
       
       <!-- oracle -->
     <!--   <property name="driverClassName" value="${oracle_driverClassName}"></property>  
       <property name="url" value="${oracle_url}"></property>   
       <property name="username" value="${oracle_username}"></property>  
       <property name="password" value="${oracle_password}"></property>  -->
       
       <property name="maxActive"><value>80</value></property>
       <property name="maxIdle"><value>20</value></property>
       <property name="maxWait"><value>3000</value></property> 
   </bean>
	
	
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
	   <property name="dataSource" ref="dataSource"></property> 
	   	<property name="mappingLocations">
			<list>
				<value>classpath:/cn/lanbao/com/jopo/User.hbm.xml</value>
			     <value>
					classpath:/cn/lanbao/com/jopo/Role.hbm.xml
				</value>
				<value>
					classpath:/cn/lanbao/com/jopo/Chara.hbm.xml
				</value>
				<!-- <value>
					classpath:/net/gbicc/x27/dict/model/Enums.hbm.xml
				</value>
				<value>
					classpath:/net/gbicc/core/test/model/*.hbm.xml
				</value>
				<value>
					classpath:/net/gbicc/core/test2/model/*.hbm.xml
				</value> -->
			</list>
		</property>
		<property name="hibernateProperties">
		   <props>
		       <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
		        <!--  <prop key="hibernate.dialect">org.hibernate.dialect.OracleDialect</prop> -->
		        <prop key="hibernate.show_sql">true</prop>
		          <prop key="hibernate.hbm2ddl.auto">update</prop>
		   </props>
		</property>
	</bean>
  
     <bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
         <property name="sessionFactory" ref="sessionFactory"></property>
     </bean>
     
     <!-- 配置一个jdbcTemplate实例 -->
     <bean id="jdbcTemplate" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
      <!--   <property name="dataSource" ref="dataSource"></property> -->
         <constructor-arg><ref bean="dataSource"/></constructor-arg>
     </bean>
     

</beans>











